# Application
NODE_ENV=production
PORT=3000
LOG_LEVEL=info

# MongoDB
MONGODB_URI=mongodb://example.com:27017
MONGODB_DB_NAME=example
MONGODB_MAX_POOL_SIZE=100
MONGODB_MIN_POOL_SIZE=10

# Redis
REDIS_HOST=example.com
REDIS_PORT=6379
REDIS_PASSWORD=secure_redis_password
REDIS_DB=0
REDIS_MAX_MEMORY=2gb
REDIS_EVICTION_POLICY=allkeys-lru

# BullMQ
BULLMQ_CONCURRENCY=4
BULLMQ_MAX_JOBS_PER_WORKER=100

# Recommendation Settings
BATCH_SIZE=10000
PRE_COMPUTE_TOP_N=100
MIN_SCORE_THRESHOLD=0.3
DIVERSITY_THRESHOLD=0.6
MIN_ORDERS_PER_PRODUCT=3
CONFIDENCE_THRESHOLD=0.3
MIN_SUPPORT_TRESHOLD=0.001
QUALITY_COLLABORATIVE_AVG_SCORE_THRESHOLD=0.15
QUALITY_COLLABORATIVE_COVERAGE_THRESHOLD=0.2
QUALITY_COLLABORATIVE_DIVERSITY_THRESHOLD=0.001
QUALITY_ASSOCIATION_AVG_SCORE_THRESHOLD=0.15
QUALITY_ASSOCIATION_COVERAGE_THRESHOLD=0.005
QUALITY_ASSOCIATION_DIVERSITY_THRESHOLD=0.001
QUALITY_PRECISION_AT_K=10
QUALITY_RECALL_AT_K=10

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_GLOBAL_MAX=10000

# API Keys
ADMIN_API_KEYS=admin-key-example-1,admin-key-example-2

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090